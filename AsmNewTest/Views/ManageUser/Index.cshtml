@using AsmNewTest.Models;

@model IEnumerable<ApplicationUser>

@{

    ViewBag.Title = "Manage Member";

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row">

    <div class="col-sm-12">

        <h2>@ViewBag.Title</h2>

        <hr />

        <table class="table table-borderer">

            <thead>

                <tr>

                    <th>Name</th>
                    <th>Email</th>

                    <th></th>

                </tr>

            </thead>

            <tbody>

                @foreach (var item in Model)

                {

                    <tr>

                        <td>@item.UserName</td>

                        <td>@item.Email</td>

                        <td>

                            @Html.ActionLink("Edit", "Edit", new { Id = item.Id }, null) |

                            @Html.ActionLink("Edit Role", "EditRole", new { Id = item.Id }, null) |

                            @Html.ActionLink("Delete", "Delete", new { Id = item.Id }, null)

                        </td>

                    </tr>

                }

            </tbody>

        </table>

    </div>

</div>